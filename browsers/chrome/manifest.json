{
  "manifest_version": 2,
  "name": "Youtube Gmail Queue",
  "version": "1.0.0",
  "description": "Access a Youtube Queue from a plugin",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "declarativeContent",
    "identity"
  ],
  "page_action": {
    "default_title": "Youtube Gmail Queue",
    "default_popup": "queue-popup.html"
  },
  "web_accessible_resources": [
    "js/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
